<div class="product">
  <div class="product-image">
    <%= link_to(image_tag(product.picture.url(:medium)), product.picture.url(:large)) %>
  </div>
  <div class="product-name">
    <%= "#{product.pname} (#{product.code})" %>
  </div>
  <% if user_signed_in? %>
    <div class="product-pricing row">
      <% if !current_user.is_international %>
        <div class="col-md-6 local">
          Php <%= product.price_local %> 
        </div>
      <% else %>
        <div class="col-md-6 international">
          $ <%= product.price_international %> 
        </div>
      <% end %>
    </div>
  <% end %>
</div>
