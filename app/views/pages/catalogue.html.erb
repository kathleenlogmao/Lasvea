<div class="row">
  <div class="col-md-12">
    <h2>Catalogue</h2>
    <hr>
  </div>
</div>
<% @categories.each_slice(3) do |slice| %>
  <div class="row">
    <% slice.each do |category| %>
      <div class="col-md-4">
        <div class="catalogue-item">
          <%= link_to category.name, catalogue_show_path(category.id) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
