<div class="row" id="featured-products">
  <div class="col-md-12">
    <h1 class="title">Featured Products</h1> 
  </div>
  <div class="col-md-12">
  </div>
  <% @products.each_slice(4) do |products| %>
    <div class="row">
      <% products.each do |product|%>
        <div class="col-md-3">
          <%= render partial: "products/preview", locals: { product: product } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
